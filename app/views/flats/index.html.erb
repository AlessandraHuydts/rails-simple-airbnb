<h1>Flats</h1>

<%= link_to 'New Flat', new_flat_path %>


<% @flats.each do |flat| %>
  <div class="flat">
    <div class="content">
      <h3><%= flat.name %></h3>
      <p><%= flat.description%></p>
      <i class="fas fa-user-friends"><%= flat.number_of_guests %></i>
      <i class="fas fa-euro-sign"><%= flat.price_per_night %></i>
    </div>
    <div class="link">
      <p>
        <%= link_to "show more", flat_path(flat) %>
        <%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>

    </div>
  </div>
<% end %>






